<dilemma name="Parfit's Hitchhiker Problem" author="Justin Pombrio" start="desert">
    <agent>Alice</agent>

    <event name="desert">
        <random>
            <case prob="0.01">
                <do event="death-in-desert"/>
            </case>
            <case prob="0.01">
                <do event="city"/>
            </case>
            <case prob="0.98">
                <predict agent="Alice" in-scenario="desert" making-decision="city">
                    <case action="leave">
                        <do event="death-in-desert"/>
                    </case>
                    <case action="pay">
                        <do event="city"/>
                    </case>
                </predict>
            </case>
        </random>
    </event>

    <event name="death-in-desert">
        <outcome>
            <utility agent="Alice" amount="-1000000"/>
        </outcome>
    </event>

    <event name="city">
        <decide agent="Alice">
            <case action="pay">
                <outcome>
                    <utility agent="Alice" amount="-1000"/>
                </outcome>
            </case>
            <case action="leave">
                <outcome>
                    <utility agent="Alice" amount="0"/>
                </outcome>
            </case>
        </decide>
    </event>
</dilemma>
