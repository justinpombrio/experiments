<dilemma name="Parfit's Hitchhiker Problem" author="Justin Pombrio" start="desert">
    <agent>Alice</agent>

    <event name="desert">
        <predict agent="Alice" in-scenario="desert" making-decision="city">
            <case choice="leave">
                <outcome>
                    <utility agent="Alice" amount="-1000000"/>
                </outcome>
            </case>
            <case choice="pay">
                <do event="city"/>
            </case>
        </predict>
    </event>

    <event name="city">
        <decide agent="Alice">
            <case choice="pay">
                <outcome>
                    <utility agent="Alice" amount="-1000"/>
                </outcome>
            </case>
            <case choice="leave">
                <outcome>
                    <utility agent="Alice" amount="0"/>
                </outcome>
            </case>
        </decide>
    </event>
</dilemma>
